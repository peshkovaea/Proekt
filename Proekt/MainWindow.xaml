<Window x:Class="Proekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proekt"
        xmlns:vm="clr-namespace:Proekt.ViewModel"
        xmlns:conv="clr-namespace:Proekt.Converter"
        mc:Ignorable="d"
        x:Name="win"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <conv:CutOffUserConverter x:Key="cutOffConverter" Min="25"/>
    </Window.Resources>
    <d:Window.DataContext>
        <vm:MainWindowViewModel/>
    </d:Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*" />
            <RowDefinition Height="0.9*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button Content="ADD" Command="{Binding AddCommand}"/>
            <Button Content="UPDATE" Command="{Binding UpdateCommand}"/>
            <Button Content="DELETE" Command="{Binding DeleteCommand}"/>
        </StackPanel>
        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Users}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="5" Margin="5" BorderThickness="1" BorderBrush="Black">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background"
                                Value="{Binding ElementName=win, Path=Background}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Rating, Converter={StaticResource cutOffConverter}}"
                                         Value="False">
                                            <Setter Property="Background" Value="#7FFF0000"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <DockPanel>
                                <TextBlock TextAlignment="Center" DockPanel.Dock="Right" Text="{Binding Rating}" MinWidth="50"/>
                                <StackPanel>
                                    <TextBlock FontSize="18" FontWeight="SemiBold">
                            <Run Text="{Binding Id}"/>
                            <Run Text=" | "/>
                            <Run Text="{Binding Username}"/>
                                    </TextBlock>
                                    <TextBlock Text="{Binding Phone, StringFormat='Номер телефона: {0}'}"/>
                                    <TextBlock TextTrimming="CharacterEllipsis">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="{Binding Information}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Information}" Value="">
                                                        <Setter Property="Text" Value="Информация не предоставлена"/>
                                                        <Setter Property="Opacity" Value="0.5"/>
                                                        <Setter Property="FontStyle" Value="Italic"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </DockPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>